<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"

    tools:context=".Suggestions">

  <View
      android:id="@+id/view5"
      android:layout_width="340dp"
      android:layout_height="584dp"
      android:layout_marginBottom="32dp"
      android:background="@drawable/custom_radious"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.493"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textView17"
      android:layout_width="327dp"
      android:layout_height="50dp"
      android:layout_marginTop="40dp"
      android:text="Suggesions"
      android:textAlignment="center"
      android:textColor="#426FA4"
      android:textSize="32dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/button2"
      android:layout_width="290dp"
      android:layout_height="140dp"
      android:layout_marginTop="32dp"
      android:text="Meal Planner"
      android:background="@drawable/custom_button2"
      android:textAllCaps="false"
      android:textColor="#426FA4"
      android:textSize="20dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.29"
      app:layout_constraintStart_toStartOf="@+id/view5"
      app:layout_constraintTop_toTopOf="@+id/view5" />

  <Button
      android:id="@+id/button3"
      android:layout_width="290dp"
      android:layout_height="140dp"
      android:text="Exercise Manager "
      android:textAllCaps="false"
      android:textColor="#426FA4"
      android:background="@drawable/custom_button2"
      android:textSize="20dp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/stressmainbut"
      app:layout_constraintEnd_toEndOf="@+id/view5"
      app:layout_constraintStart_toStartOf="@+id/view5"
      app:layout_constraintTop_toBottomOf="@+id/button2" />

  <Button
      android:id="@+id/stressmainbut"
      android:layout_width="290dp"
      android:layout_height="141dp"
      android:layout_marginBottom="56dp"
      android:drawableRight="@drawable/stress130"
      android:text="Stress Releaser"
      android:background="@drawable/custom_button2"
      android:textAlignment="center"
      android:textAllCaps="false"
      android:textColor="#426FA4"
      android:textSize="20dp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/view5"
      app:layout_constraintEnd_toEndOf="@+id/view5"
      app:layout_constraintStart_toStartOf="@+id/view5" />

</androidx.constraintlayout.widget.ConstraintLayout>