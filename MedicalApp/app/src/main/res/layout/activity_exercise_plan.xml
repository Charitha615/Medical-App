<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExercisePlan">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="310dp"
        android:layout_height="62dp"
        android:layout_marginTop="48dp"
        android:text="Exercise Scheduler"
        android:textAlignment="center"
        android:textColor="#426FA4"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view6"
        android:layout_width="338dp"
        android:layout_height="524dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/custom_radious"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="107dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/week_01"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="@+id/view6"

        />

    <Button
        android:id="@+id/button2"
        android:layout_width="107dp"
        android:layout_height="58dp"
        android:layout_marginTop="176dp"

        android:text="Week 01"

        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toTopOf="@+id/view6" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="107dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="12dp"
        android:padding="5dp"
        android:scaleType="centerCrop"

        android:src="@drawable/week_02"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toStartOf="@+id/view6"

        />

    <Button
        android:id="@+id/button3"
        android:layout_width="107dp"
        android:layout_height="58dp"
        android:layout_marginTop="220dp"
        android:backgroundTint="#A47975"
        android:text="Week 02"

        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toTopOf="@+id/view6" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="107dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="40dp"
        android:padding="5dp"
        android:scaleType="centerCrop"

        android:src="@drawable/week_03"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toStartOf="@+id/view6"

        />

    <Button
        android:id="@+id/button4"
        android:layout_width="105dp"
        android:layout_height="58dp"
        android:backgroundTint="#3B4D63"
        android:text="Week 04"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintVertical_bias="0.92" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="107dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/week_04"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintStart_toStartOf="@+id/view6"

        />

    <Button
        android:id="@+id/button5"
        android:layout_width="105dp"
        android:layout_height="58dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#4A688B"
        android:text="week 03"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="@+id/view6" />

</androidx.constraintlayout.widget.ConstraintLayout>